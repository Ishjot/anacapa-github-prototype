<h1>Welcome, Admin!</h1>

<table>
  <thead>
    <tr>
      <th>User Email</th>
      <th>Is Admin?</th>
      <th>Is Instructor?</th>
      <th>User ID</th>
      <th>Toggle Admin</th>
      <th>Toggle Insturctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.has_role? :admin %></td>
        <td><%= user.has_role? :instructor %></td>
        <td><%= user.uid %></td>
        <td><%= button_to 'toggle_admin', { :controller => "admin_panel", :action => "toggle_admin" } %></td>
        <td><%= button_to 'toggle_instructor', { :controller => "admin_panel", :action => "toggle_instructor" }%></td>
      </tr>
    <% end %>
  </tbody>
</table>
